{
  "expo": {
    "name": "GoKitar",
    "slug": "gokitar-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gokitarexpo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.gokitarexpo",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "jsEngine": "hermes",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "buildFeatures": {
        "minifyEnabled": true,
        "enableProguardInReleaseBuilds": true,
        "shrinkResources": true
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.gokitarexpo",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-sqlite",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "expo-build-properties",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload picture."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "build": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildType": "archive",
        "image": "latest"
      }
    }
  }
}
